<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.rosyid.topartists">

    <application
        android:allowBackup="true"

        android:icon="@mipmap/ic_topartist"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_topartist_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TopArtists.NoActionBar">
        <activity
            android:parentActivityName=".ui.main.artists.detail.DetailArtistActivity"
            android:name=".ui.main.artists.detail.ListSongsActivity"
            android:theme="@style/Theme.TopArtists" />
        <activity
            android:parentActivityName=".ui.main.MainActivity"
            android:name=".ui.main.artists.detail.DetailArtistActivity"
            android:theme="@style/Theme.TopArtists" />
        <activity
            android:parentActivityName=".ui.main.MainActivity"
            android:name=".ui.about.AboutActivity"
            android:theme="@style/Theme.TopArtists"/>
        <activity android:name=".ui.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.MainActivity" />
    </application>

</manifest>